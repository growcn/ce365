<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
             <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
        -->
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="setting_item_text">
        <item name="android:textSize">17.0sp</item>
        <item name="android:textColor">@color/setting_item_text</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">10.0dip</item>
        <item name="android:layout_marginRight">10.0dip</item>
    </style>

    <style name="setting_item_head">
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@drawable/bg_row_head</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">42.0dip</item>
    </style>

    <style name="setting_item_center" parent="@style/setting_item_head">
        <item name="android:background">@drawable/bg_row_center</item>
        <item name="android:layout_marginTop">-0.5dip</item>
    </style>

    <style name="setting_item_end" parent="@style/setting_item_head">
        <item name="android:background">@drawable/bg_row_end</item>
        <item name="android:layout_marginTop">-0.5dip</item>
    </style>

    <style name="setting_alt_text">
        <item name="android:textSize">13.0sp</item>
        <item name="android:textColor">@color/setting_alt_text</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">5.0dip</item>
        <item name="android:layout_marginRight">5.0dip</item>
        <item name="android:layout_weight">0.0</item>
    </style>

    <style name="setting_checkbox">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">10.0dip</item>
        <item name="android:layout_weight">0.0</item>
    </style>

    <style name="setting_arrow" parent="@style/setting_checkbox">
        <item name="android:src">@drawable/arrow_drawer</item>
    </style>

</resources>